<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >

        <RelativeLayout
            android:id="@+id/replytopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/reply"
                android:orientation="vertical"
                android:layout_marginLeft="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/replymsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:gravity="top"
                    android:singleLine="false"
                    android:isScrollContainer="true"
                    android:layout_below="@+id/optioncontent"
                    android:text="Content Content Content Content Content Content Content Content Content Content Content Content "
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1.7dp"
                android:layout_below="@+id/reply"
                android:background="@color/cardDivider" />

            <LinearLayout
                android:id="@+id/replyinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="2dp"
                android:layout_below="@+id/reply"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/replylike"
                    android:drawableLeft="@drawable/like"
                    android:background="@drawable/likebutton"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    />

                <Button
                    android:id="@+id/replydislike"
                    android:drawableLeft="@drawable/heartdislike"
                    android:background="@drawable/likebutton"
                    android:layout_width="40dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/replytimedisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time display"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textAlignment="gravity"
                    android:gravity="right"
                    android:layout_marginRight="10dp" />

            </LinearLayout>




        </RelativeLayout>


        <!--</RelativeLayout>-->
    </android.support.v7.widget.CardView>


</LinearLayout>
