<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >

            <RelativeLayout
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_alignParentTop="true"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:id="@+id/questionContainer"
                    android:orientation="vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:id="@+id/header"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/isNew"
                                android:textStyle="bold"
                                android:text="@string/newflag"
                                android:padding="3dp"
                                android:background="#FFFF0000"
                                android:textColor="@android:color/white"
                                android:layout_marginRight="5dp"
                                android:textSize="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginLeft="2dp" />

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/imageAvailable"
                                android:src="@drawable/ic_photo_black_24dp"
                                android:layout_marginLeft="-3dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/optioncontent"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:layout_below="@+id/header"
                            android:layout_marginRight="28dp"
                            android:text="Title" />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/onlymsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:gravity="top"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:layout_below="@+id/optioncontent"
                        android:text="Content Content Content Content Content Content Content Content Content Content Content Content "
                        android:layout_marginTop="5dp" />

                </LinearLayout>


                <ImageButton
                    android:id="@+id/showall"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/expand_all_states"
                    android:layout_marginRight="3dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_marginTop="3dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:contentDescription="Read more button"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">

                </ImageButton>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1.7dp"
                    android:layout_below="@+id/questionContainer"
                    android:background="@color/cardDivider" />

                <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="5dp">

                    <ImageButton
                        android:id="@+id/like"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/like_states"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:contentDescription="likeButton">

                    </ImageButton>

                    <TextView
                        android:id="@+id/like_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:layout_marginTop="2dp" />

                    <ImageButton
                        android:id="@+id/dislike"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/dislike_states"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:contentDescription="dislikeButton">

                    </ImageButton>

                    <TextView
                        android:id="@+id/dislike_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:layout_marginTop="2dp" />


                    <ImageButton
                        android:id="@+id/comment"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/comment_states"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:contentDescription="commentButton">
                    </ImageButton>

                    <TextView
                        android:id="@+id/reply_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/timedisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="time display"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textAlignment="gravity"
                        android:gravity="right"
                        android:layout_marginRight="10dp" />

                 </LinearLayout>
             </RelativeLayout>


        <!--</RelativeLayout>-->
     </android.support.v7.widget.CardView>


</LinearLayout>
