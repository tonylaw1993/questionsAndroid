<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >

            <RelativeLayout
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:id="@+id/questionContainer"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/header"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/timedisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/showall"
                            android:layout_width="30dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_expand_more_black_24dp"
                            android:textSize="12sp"
                            android:layout_marginRight="5dp"
                            android:onClick="onClick"
                            android:clickable="true"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/isNew"
                        android:textStyle="bold"
                        android:text="@string/newflag"
                        android:padding="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#FFFF0000"
                        android:textColor="@android:color/white"
                        android:textSize="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/head_desc"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:text="tit"
                        android:layout_below="@+id/header" />



                    <TextView
                        android:id="@+id/onlymsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:gravity="top"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:layout_below="@+id/head_desc"
                        android:text="msg"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/questionContainer"
                    android:background="@color/cardDivider" />

                <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    >



                    <ImageButton
                        android:id="@+id/like"
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/like_states"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:contentDescription="likeButton">

                    </ImageButton>

                    <TextView
                        android:id="@+id/like_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0"/>

                    <Button
                        android:id="@+id/dislike"
                        android:drawableLeft="@drawable/heartdislike"
                        android:background="@drawable/likebutton"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"/>

                    <Button
                        android:id="@+id/comment"
                        android:background="@drawable/comment"
                        android:layout_width="40dp"
                        android:layout_height="25dp" />

                 </LinearLayout>
             </RelativeLayout>


        <!--</RelativeLayout>-->
     </android.support.v7.widget.CardView>


</LinearLayout>
